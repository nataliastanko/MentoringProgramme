{% if images is not empty %}
<section id="gallery-section">
  <div id="gallery" class="page-header">
    <h1>{{ 'menu.gallery' | trans }}</h1>
  </div>
  {% spaceless %}
  <div id="lightgallery">
  {%- for image in images -%}
    {% if loop.first or (loop.index - 1) % 3 == 0 %}
      <div class="row">
    {% endif %}

    <div class="col-sm-6 col-md-4">
      <div class="thumbnail">
          {% if image.photoName %}
            <div
              class="picture"
              data-src="{{ vich_uploader_asset(image, 'photoFile') | imagine_filter('gallery') }}">
              <img
                alt="{{ image.description }}"
                src="{{ vich_uploader_asset(image, 'photoFile') | imagine_filter('gallery_thumb') }}" />
            </div>
            {% endif %}
      </div>
    </div>

    {% if loop.index % 3 == 0 or loop.last %}
      </div>
    {% endif %}

  {%- endfor -%}
  </div>
  {% endspaceless %}
</section>
{% endif %}
