{% extends 'WitProgramAccountUserBundle::account.html.twig' %}

{% block body %}

{% include "WitProgramAccountUserBundle:Account:_welcome.html.twig" %}

{# Columns are always 50% wide, on mobile and desktop #}
<div class="row">

  <div class="col-md-6 col-xs-12">
    {% include "WitProgramAccountUserBundle:Account:importantInfo.html.twig" %}
  </div>{# col #}

  {# @todo dodaj informacje o przesz≈Çych edycjach tego mentora i jego podopiecznych #}
  <div class="col-md-6 col-xs-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">
          {{- 'account.programme.edition.current' | trans({'%edition%': edition.name}) -}}
        </h3>
      </div>

      <div class="panel-body">
        <div class="list-group">
            <p>{{- 'account.edition' | trans({'%edition%' : person.edition.name }) -}}</p>
            <p>{{- 'account.mentee.mentor.yoursIs' | trans -}}&nbsp;
                <a href="{{- path('account_mentee_mentor_show', {'id' : person.mentor.id }) -}}"
                  <strong>{{ person.mentor.fullname }}</strong>
                </a>
            </p>
        </div>{# list-group #}
      </div>{# panel-body #}
    </div>{# panel panel-default #}
  </div>{# col #}
</div>{# row #}

{% endblock %}
