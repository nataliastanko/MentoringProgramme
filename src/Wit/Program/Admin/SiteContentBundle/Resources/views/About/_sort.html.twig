{% if about %}
    <table class="table table-hover">
        <thead>
            <tr>
                <th>&nbsp;</th>
                <th>{{ 'about.name' | trans }}</th>
                <th>{{ 'about.content' | trans }}</th>
            </tr>
        </thead>
        <tbody id="sortable" data-href="{{ path("about_sort") }}">
        {% for text in about %}
            <tr data-id="{{ text.id }}" class="ui-state-default">
                <td class="handle"><i class="fa fa-arrows"></i></td>
                <td>{{ text.name | truncate(20, true, '...') }}</td>
                <td>{{ text.content | truncate(20, true, '...') }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% else %}
    {% include 'WitSiteBundle:helper:emptyResult.html.twig' %}
{% endif %}
