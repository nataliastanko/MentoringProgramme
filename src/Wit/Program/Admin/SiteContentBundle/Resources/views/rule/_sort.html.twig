{% if rules %}
    <table class="table table-hover">
        <thead>
            <tr>
                <th>&nbsp;</th>
                <th>{{ 'rule.content' | trans }}</th>
            </tr>
        </thead>
        <tbody id="sortable" data-href="{{ path("rule_sort") }}">
        {% for rule in rules %}
            <tr data-id="{{ rule.id }}" class="ui-state-default">
                <td class="handle"><i class="fa fa-arrows"></i></td>
                <td>{{ rule.content | truncate(20, true, '...') }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% else %}
    {% include 'WitSiteBundle:helper:emptyResult.html.twig' %}
{% endif %}
