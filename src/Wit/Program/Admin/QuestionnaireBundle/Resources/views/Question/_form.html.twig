{#
    callback validation error messages for translatable fields must be printed here
    or @FIXME elswere
#}

{{ form_start(form) }}

{% if not form.vars.valid %}
    <div class="alert-error">
        {{ form_errors(form) }}
    </div>
{% endif %}

<div class="row">
    <div class="col-sm-6 col-xs-12">
        {# {{ form_widget(form) }} #}
        {{ form_row(form.type) }}
        {# {{ form_row(form.helpblock) }} #}
        {{ form_row(form.translations) }}

        <h3>{{ 'choice.option' | trans }}</h3>

        <ul class="collection list-unstyled" data-prototype="{{ form_widget(form.answerChoices.vars.prototype.translations)|e }}">
            {# iterate over each existing choices and render its only field: name #}
                {% for ch in form.answerChoices %}
                    {# <li>{{ form_row(ch.name) }}</li> #}
                    <li>{{ form_row(ch.translations) }}</li>
                {% endfor %}

        </ul>

        {{ form_row(form.isVisibleForMentor) }}

        <button type="submit" class="btn btn-default" id="_submit" name="_submit">{{ 'button.save' | trans }}</button>
    </div>
</div>

{{ form_end(form) }}
