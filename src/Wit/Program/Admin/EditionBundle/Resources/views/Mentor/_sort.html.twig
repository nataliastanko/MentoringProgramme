<div id="mentorsSorted">
{% if mentors %}
    <table id="sortmentors" class="table table-hover">
        <thead>
            <tr>
                <th>&nbsp;</th>
                <th>{{ 'mentor.name' | trans }}</th>
                <th>{{ 'mentor.lastName' | trans }}</th>
            </tr>
        </thead>
        <tbody id="sortable" data-href="{{ path("mentor_sort") }}">
        {% for mentor in mentors %}
            <tr data-id="{{ mentor.id }}" class="ui-state-default">
                <td class="handle"><i class="fa fa-arrows"></i></td>
                <td>{{ mentor.name }}</td>
                <td>{{ mentor.lastName }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% else %}
    {% include 'WitSiteBundle:helper:emptyResult.html.twig' %}
{% endif %}
</div>
