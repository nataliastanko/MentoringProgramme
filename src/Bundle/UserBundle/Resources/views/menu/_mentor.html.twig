{# homepage account #}
<li{%-
    if app.request.attributes.get('_route') ends with 'account_mentor'
    or
    app.request.attributes.get('_route') ends with 'account' %} class="active"{%- endif -%}>
  <a href="{{ path('account_mentor') }}">{{ 'menu.info' | trans }}</a>
</li>
{# mentees list #}
<li{%- if app.request.attributes.get('_route') starts with 'account_mentor_' %} class="active"{%- endif -%}>
  <a href="{{ path('account_mentor_mentees_list') }}">{{ 'menu.mentor.mentees.list' | trans }}</a>
</li>
{# calendar #}
<li{%- if app.request.attributes.get('_route') starts with 'calendar_'
  or
  app.request.attributes.get('_route') starts with 'event_' %} class="active"{%- endif -%}>
  <a href="{{ path('calendar_index') }}">{{ 'menu.calendar' | trans }}</a>
</li>
