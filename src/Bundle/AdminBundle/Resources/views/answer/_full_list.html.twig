{% if answers %}
    <table class="table table-hover">
        <thead>
            <tr>
                <th>{{ 'question.name' | trans }}</th>
                <th>{{ 'answer.content' | trans }}</th>
                <th>&nbsp;</th>
            </tr>
        </thead>
        <tbody>
        {% for answer in answers %}
            <tr>
                <td>{{ answer.question.name }}</td>
                <td>
                    {%- if answer.answerChoice -%}
                        {{- answer.answerChoice.name -}}
                    {%- else -%}
                        {{- answer.content -}}
                    {%- endif -%}
                </td>
                <td>
                <ul class="list-unstyled">
                    <li>
                        <a href="{{ path('answer_show', { 'id': answer.id }) }}">{{ 'button.show' | trans }}</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% else %}
    {% include 'SiteBundle:helper:emptyResult.html.twig' %}
{% endif %}
