{% extends 'UserBundle::account.html.twig' %}

{% block body %}
    <div class="page-header">
        <h1>{{ 'rule.detail' | trans }}</h1>
    </div>

    <ul class="nav-internal list-unstyled">
        <li>
            <a href="{{ path('rule_edit', { 'id': rule.id }) }}" class="btn btn-primary btn-sm">{{ 'button.edit' | trans }}</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input class="btn btn-primary btn-sm" type="submit" value="{{ 'button.delete' | trans }}">
            {{ form_end(delete_form) }}
        </li>
    </ul>

    <div class="row">
        <div class="col-md-6 col-sm-12">

            <table class="table table-hover">
                <tbody>
                    <tr>
                        <th>{{ 'rule.content' | trans }}</th>
                        <td>{{ rule.content }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

{% endblock %}
