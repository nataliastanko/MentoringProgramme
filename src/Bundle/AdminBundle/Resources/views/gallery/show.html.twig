{% extends 'UserBundle::account.html.twig' %}

{% block body %}
    <div class="page-header">
        <h1>{{ 'image.detail' | trans }}</h1>
    </div>

    <ul class="nav-internal list-unstyled">
        <li>
            <a href="{{ path('gallery_edit', { 'id': image.id }) }}" class="btn btn-primary btn-sm">{{ 'button.edit' | trans }}</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <button class="btn btn-primary btn-sm" type="submit">
                    {{- 'button.delete' | trans -}}
                </button>
            {{ form_end(delete_form) }}
        </li>
    </ul>

    <div class="row">
        <div class="col-md-6 col-sm-12">
            {# photo #}
            {% if image.photoName %}
                <div class="cover">
                    <img class="img-detail"
                        src="{{ vich_uploader_asset(image, 'photoFile') | imagine_filter('detail_thumb') }}" alt="{{ image.photoFile }}" />
                </div>
            {% endif %}
        </div>
        <div class="col-md-6 col-sm-12">

            <table class="table table-hover">
                <tbody>
                    <tr>
                        <th>{{ 'image.description' | trans }}</th>
                        <td>{{ image.description }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

{% endblock %}
