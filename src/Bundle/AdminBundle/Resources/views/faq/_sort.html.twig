{% if faqs %}
    <table class="table table-hover">
        <thead>
            <tr>
                <th>&nbsp;</th>
                <th>{{ 'faq.question' | trans }}</th>
            </tr>
        </thead>
        <tbody id="sortable" data-href="{{ path("faq_sort") }}">
        {% for faq in faqs %}
            <tr data-id="{{ faq.id }}" class="ui-state-default">
                <td class="handle"><i class="fa fa-arrows"></i></td>
                <td>{{ faq.question | truncate(20, true, '...') }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% else %}
    {% include 'SiteBundle:helper:emptyResult.html.twig' %}
{% endif %}
