{%- if sponsors is not empty -%}
<section id="sponsors-section">
  <div id="sponsors" class="page-header">
    <h1>{{ 'menu.sponsors' | trans }}</h1>
  </div>
  {% spaceless %}
  {%- for sponsor in sponsors -%}
    {%- if loop.first or (loop.index - 1) % 3 == 0 -%}
      <div class="row">
    {%- endif -%}

    <div class="col-sm-6 col-md-4">
      <div class="thumbnail">

        {# url begins #}
        {%- if sponsor.url -%}<a href="{{ sponsor.url }}">{%- endif -%}
        <div class="picture">
          {%- if sponsor.photoName -%}
            <img
                src="{{ vich_uploader_asset(sponsor, 'photoFile') | imagine_filter('homepage') }}" alt="{{ sponsor.name }}" />
          {%- endif -%}
        </div>
        {%- if sponsor.url -%}</a>{%- endif -%}
        {# url ends #}

        <div class="caption text-center">
          <h3>{{- sponsor.name -}}</h3>
          <div class="biogram">
            {{- sponsor.description | nl2br -}}
          </div>{# biogram ends#}
        </div>{# picture ends#}
      </div>{# thumbnail ends#}
    </div>{# col ends#}

    {%- if loop.index % 3 == 0 or loop.last -%}
      </div>{# row ends#}
    {%- endif -%}

  {%- endfor -%}
  {% endspaceless %}

</section>
{%- endif -%}
