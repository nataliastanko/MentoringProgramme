{% extends "FOSUserBundle::layout.html.twig" %}

{% block submenu %}
  <div class="container submenu-container">
    {% include 'UserBundle:menu:_profile.html.twig' %}
  </div>
{% endblock %}

{% block fos_user_content %}

  {%- if user.invitation -%}
    {%- if user.invitation.mentor -%}
      {%- include "FOSUserBundle:Profile:show_mentor_profile.html.twig" -%}
    {%- else -%}
      {%- include "FOSUserBundle:Profile:show_mentee_profile.html.twig" -%}
    {%- endif -%}
  {%- else -%}
    {%- if is_granted("ROLE_ADMIN") -%}
    {%- include "FOSUserBundle:Profile:show_admin_profile.html.twig" -%}
    {%- elseif is_granted("ROLE_TRANSLATOR") -%}
    {%- include "FOSUserBundle:Profile:show_translator_profile.html.twig" -%}
    {%- endif -%}
  {%- endif -%}

{% endblock fos_user_content %}
